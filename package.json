{
  "name": "use-npmrc",
  "version": "1.2.0",
  "description": "Move your .npmrc file into place before accessing private dependencies.",
  "keywords": [
    "github",
    "npmrc",
    "node",
    "npm"
  ],
  "homepage": "https://www.asitewithnoname.com/",
  "license": "MIT",
  "author": "Brian Duffey <brian.e.duffey@gmail.com>",
  "contributors": [],
  "main": "lib/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bduff9/use-npmrc"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "lint:script": "scriptlint && npmPkgJsonLint .",
    "lint:script:fix": "scriptlint --fix",
    "package": "ncc build --source-map --license licenses.txt",
    "setup": "npx typesync && npm i && npm prune",
    "start": "echo 'No start script'",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --ci --reporters='default' --reporters='./github-actions-reporter'",
    "test:coverage": "jest --coverage --env=jsdom --coverage",
    "test:watch": "jest --watch",
    "typeCheck": "tsc",
    "validate": "npm run lint && npm run lint:script && tsc --noEmit && knip"
  },
  "config": {},
  "dependencies": {
    "@actions/core": "1.10.0"
  },
  "devDependencies": {
    "@types/eslint": "8.21.1",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/jest": "29.4.0",
    "@types/js-yaml": "4.0.5",
    "@types/node": "18.14.0",
    "@types/prettier": "2.7.2",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "@vercel/ncc": "0.36.1",
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-github": "4.6.1",
    "eslint-plugin-import": "npm:eslint-plugin-i@^2.26.0-2",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-regexp": "1.12.0",
    "husky": "8.0.3",
    "jest": "29.4.3",
    "jest-circus": "29.4.3",
    "js-yaml": "4.1.0",
    "knip": "1.12.3",
    "lint-staged": "13.1.2",
    "npm-package-json-lint": "6.4.0",
    "prettier": "2.8.4",
    "scriptlint": "2.2.0",
    "sync-dotenv": "2.7.0",
    "ts-jest": "29.0.5",
    "ts-prune": "0.10.3",
    "typescript": "4.9.5",
    "typesync": "0.10.0"
  },
  "engines": {
    "node": "16.x"
  },
  "private": true,
  "husky": {
    "hooks": {
      "post-merge": "npm run setup",
      "pre-commit": "lint-staged && npm run env",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --quiet --fix",
      "git add"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "scriptlint --fix",
      "npmPkgJsonLint ."
    ]
  }
}
